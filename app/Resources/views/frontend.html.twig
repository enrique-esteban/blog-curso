{% extends 'base.html.twig' %}

 {% block header %}
    <header>
        <div class="blog-masthead">
            <div class="container">
                <nav class="nav">
                    <a class="nav-link active" href="{{ path('blog_homepage') }}">Home</a>
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <a class="nav-link" href="">Perfil</a>
                        <a class="nav-link" href="{{ path('logout') }}">Logout</a>
                    {% endif %}
                    <a class="nav-link" href="{{ path('login') }}">Login</a>
                </nav>
            </div>
        </div>

        {% block blogHeader %}
            <div class="blog-header">
                <div class="container">
                    <h1 class="blog-title">Blog Symfony</h1>
                    <p class="lead blog-description">Estamos en el curso de Symfony de ExpertosIT.</p>
                </div>
            </div>
        {% endblock %}
    </header>
 {% endblock %}

